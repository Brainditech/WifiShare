{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist-electron",
        "rootDir": "electron",
        "declaration": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "electron/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}